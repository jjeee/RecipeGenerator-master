<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/btn_oil_OliveOil"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@color/pastelRed"
            style="@style/grid_button"
            android:text="Olive Oil" />

        <Button
            android:id="@+id/btn_oil_CanolaOil"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@color/pastelRed"
            style="@style/grid_button"
            android:text="Canola Oil" />

        <Button
            android:id="@+id/btn_oil_VegetableOil"
            android:layout_column="3"
            android:layout_row="1"
            android:background="@color/pastelRed"
            style="@style/grid_button"
            android:text="Vegetable Oil" />

        <Button
            android:id="@+id/btn_oil_PeanutOil"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@color/pastelRed"
            style="@style/grid_button"
            android:text="Peanut Oil" />

        <Button
            android:id="@+id/btn_oil_CookingSpray"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@color/pastelRed"
            style="@style/grid_button"
            android:text="Cooking Spray" />

        <Button
            android:id="@+id/btn_oil_Shortening"
            android:layout_column="3"
            android:layout_row="2"
            android:background="@color/pastelRed"
            style="@style/grid_button"
            android:text="Shortening" />

        <Button
            android:id="@+id/btn_oil_RedPepSauce"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@color/pastelRed"
            style="@style/grid_button"
            android:text="Red Pepper Sauce" />

        <Button
            android:id="@+id/btn_oil_TomatoPaste"
            android:layout_column="2"
            android:layout_row="3"
            android:background="@color/pastelRed"
            style="@style/grid_button"
            android:text="Tomato Paste" />

        <Button
            android:id="@+id/btn_oil_TomatoSauce"
            android:layout_column="3"
            android:layout_row="3"
            android:background="@color/pastelRed"
            style="@style/grid_button"
            android:text="Tomato Sauce" />

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@id/btn_all_back"
            android:text="@string/all_back"
            android:layout_marginEnd="55dp"
            style="@style/nav_button" />

        <Button
            android:id="@id/btn_all_clear"
            android:text="@string/all_clear"
            android:layout_marginStart="55dp"
            style="@style/nav_button" />

    </LinearLayout>
</LinearLayout>
